#!/bin/bash
set -o pipefail
set -Eeux
export DEBIAN_FRONTEND=noninteractive
if [[ -f "/tmp/.apt-update" ]]; then
    RUNLEVEL=1 apt-get install -yf --no-install-recommends $*
else
    apt-get update
    RUNLEVEL=1 apt-get install -yf --no-install-recommends $*
    rm -rf /var/lib/apt/lists/*
    apt-get clean -y
fi
